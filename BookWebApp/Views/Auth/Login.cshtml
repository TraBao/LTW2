@model BookWebApp.Models.DTO.LoginRequestDto

<h1>Đăng nhập</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.Error
    </div>
}

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="Username" class="form-label">Email</label>
        <input type="email" asp-for="Username" class="form-control" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Password" class="form-label">Mật khẩu</label>
        <input type="password" asp-for="Password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Đăng nhập</button>
</form>